
<!-- ======= Header ======= -->
<div class="container p-0" style="display: flex; position: absolute; right: 0; justify-content: flex-end; align-items: flex-end; width: 18rem; height: auto;">
  <div class="row" id="singout" style="display: none;">
    <div class="col-auto mt-5">
      <div class="card" style="width: 18rem; top: 70px;">
        <div class="card-body">
          <h5 class="card-title text-center">ออกจากระบบบัญชีผู้ใช้</h5>
          <div class="text-center">
            <a href="/singout" class="card-link link-underline-light">ตกลง</a>
            <a href="#" class="card-link link-danger link-underline-light" id="cancelBtn">ยกเลิก</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End box singout -->

<div class="d-flex align-items-center justify-content-between">
  <a href="/" class="logo d-flex align-items-center">
    <img src="../assets/img/logo.png" alt="" />
    <span class="d-none d-lg-block">Comapy</span>
  </a>
  <i class="bi bi-list toggle-sidebar-btn"></i>
</div>
<!-- End Logo -->

<nav class="header-nav ms-auto">
  <ul class="d-flex align-items-center">

    <li class="nav-item dropdown pe-3">
      
      <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown" aria-expanded="false">
        <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
        <span class="d-none d-md-block ps-2"><%= post.username%></span>
      </a><!-- End Profile Iamge Icon -->

      <li class="nav-item dropdown" style="margin-right: 10px;">
        <a class="nav-link " href="#" id="singoutBtn" >
          <i class="fa-solid fa-right-from-bracket"></i>
        </a><!-- End Messages Icon -->
      </li>

    </li><!-- End Profile Nav -->
  </ul>
</nav>
<!-- End Icons Navigation -->

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const singoutBtn = document.getElementById("singoutBtn");
    const singoutDiv = document.getElementById("singout");
    const cancelBtn = document.getElementById("cancelBtn");

    singoutBtn.addEventListener("click", function() {
      singoutDiv.style.display = "block";
    });

    cancelBtn.addEventListener("click", function() {
      singoutDiv.style.display = "none";
    });
  });
</script>


