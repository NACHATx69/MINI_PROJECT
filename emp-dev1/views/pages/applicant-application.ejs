<div class="container">
  <div class="card-body ">
    <div class="py-2 text-center">
    </div>

    <!-- Alert -->
    <% if (post.create === 'success') { %>
      <div class="alert alert-success" id="success-alert">
        ส่งข้อมูลเรียบร้อย
      </div>
    <% }else if (post.create === 'fail') { %>
      <div class="alert alert-danger" id="success-alert">
        ส่งข้อมูลไม่สำเร็จ
      </div>
    <% } %>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
        const successAlert = document.getElementById("success-alert");

        if (successAlert) {
          setTimeout(function () {
            successAlert.classList.add("show");
          }, 100); 

          setTimeout(function () {
            successAlert.classList.remove("show");
          }, 10000); 
        }
      });
    </script>

    <div class="row g-5 justify-content-center">
      <div class="col-md-7 col-lg-8">
        <h2 class="border-bottom pb-2">ข้อมูลสมัครงาน</h2>
        <form class="needs-validation" novalidate action="/application?send" method="post">
          <div class="row g-3">
            
            <div class="col-sm-12" style="display: none;">
              
            </div style="display: none;">
            <div class="col-sm-8" >
              <input type="text" id="APPL_ID" NAME="APPL_ID" value="<%= post.APPL_ID%>" hidden>
              <input type="text" id="REQUEST_ID" NAME="REQUEST_ID" value="<%= post.application%>"hidden>
            </div>

            <div class="col-sm-9">
            </div>

            <div class="col-sm-3">
              <label for="lastName" class="form-label">เงินเดือนที่คาดหวัง</label>
              <input type="number" class="form-control" id="SALARY" name="SALARY" placeholder="" value="" required>
              <div class="invalid-feedback">
                required.
              </div>
            </div>

            <div class="col-12">
              <p>ตำแหน่งที่สมัคร: <%= post.JOB %></p>
            </div>

            <div class="col-sm-6">
              <label for="FNAME" class="form-label">ชื่อ</label>
              <input type="text" class="form-control" id="FNAME" name="FNAME" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="LNAME" class="form-label">นามสกุล</label>
              <input type="text" class="form-control" id="LNAME" name="LNAME" placeholder="" value="" required>
              <div class="invalid-feedback">
                required.
              </div>
            </div>
            
            <div class="col-md-12">
              
              <label for="EDUCATION" class="form-label">การศึกษา</label>
              <select class="form-select" id="STUDY" name="STUDY" required>
                <option value="" selected>ระบุ....</option> 
                <% post.study.forEach(level => { %>
                  <option value="<%= level.ID %>"><%= level.STUDY %></option>
                <% }); %>
              </select>
              <div class="invalid-feedback">
                กรอกการศึกษา
              </div>
            </div>

            <div class="col-sm-12">
              <label for="ADDRESS" class="form-label">ที่อยู่</label>
              <input type="text" class="form-control" id="ADDRESS" name="ADDRESS" placeholder="" value="" required>
              <div class="invalid-feedback">
                required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="TEL" class="form-label">เบอร์มือถือ</label>
              <input type="text" class="form-control" id="TEL" name="TEL" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid first username is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">อีเมล</label>
              <input type="MAIL" class="form-control" id="EMAIL" name="EMAIL" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid last password is required.
              </div>
            </div>

            <div class="col-12 mt-4">
              <h6 class="mt-4">ความชำนาญ</h6>
            </div>
            
            <div class="col-md-6">
              <label for="SKILL1" class="form-label">ความถนัด 1</label>
              <select class="form-select" id="SKILL_EX1" name="SKILL_EX1" >
                  <option value="" selected>ระบุ....</option> 
                  <% post.skill.forEach(skill => { %>
                    <option value="<%= skill.ID %>"><%= skill.SKILL %></option>
                  <% }); %>
                </select>
              </select>
              <div class="invalid-feedback">
                กรอกความถนัด
              </div>
            </div>

            <div class="col-md-6">
              <label for="SKILL2" class="form-label">ความถนัด 2</label>
              <select class="form-select" id="SKILL_EX2" name="SKILL_EX2" >
                  <option value="" selected>ระบุ....</option> 
                  <% post.skill.forEach(skill => { %>
                    <option value="<%= skill.ID %>"><%= skill.SKILL %></option>
                  <% }); %>
                </select>
              </select>
              <div class="invalid-feedback">
                กรอกความถนัด
              </div>
            </div>

            <div class="col-md-6">
              <label for="SKILL3" class="form-label">ความถนัด 3</label>
              <select class="form-select" id="SKILL_EX3" name="SKILL_EX3" >
                  <option value="" selected>ระบุ....</option> 
                  <% post.skill.forEach(skill => { %>
                    <option value="<%= skill.ID %>"><%= skill.SKILL %></option>
                  <% }); %>
                </select>
              </select>
              <div class="invalid-feedback">
                กรอกความถนัด
              </div>
            </div>

            <div class="col-md-6">
              <label for="SKILL4" class="form-label">ความถนัด 4</label>
              <select class="form-select" id="SKILL_EX4" name="SKILL_EX4" >
                  <option value="" selected>ระบุ....</option> 
                  <% post.skill.forEach(skill => { %>
                    <option value="<%= skill.ID %>"><%= skill.SKILL %></option>
                  <% }); %>
                </select>
              </select>
              <div class="invalid-feedback">
                กรอกความถนัด
              </div>
            </div>

            
            <div class="col-12 mt-4">
              <h6 class="mt-4">ประสบการณ์ทำงาน</h6>
            </div>

            <div class="col-sm-12">
              <textarea class="form-control" id="EXP" name="EXP" rows="10" required maxlength="2000"></textarea>
              <div class="invalid-feedback">
                กรอกรายละประสบการณ์
              </div>
            </div>
            
            <div class="col-sm-12">
              <label for="DOC" class="form-label">เอกสารยืนสมัครงาน (ลิงค์)</label>
              <input type="text" class="form-control" id="DOC" name="DOC" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid last password is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="DOC" class="form-label">วันที่สมัคร</label>
              <input type="date" class="form-control" id="DATE_FORM" name="DATE_FORM" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid last password is required.
              </div>
            </div>
            

          </div>
          <hr class="mt-4">

          <div class="col justify-content-center " >
            <div class="row justify-content-center mt-4">
              <button class="w-50 btn btn-primary btn-lg mt-4" type="submit">สมัครงาน</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div style="height: 100vh;">

  </div>
</div>